<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="11.7dp"
    android:id="@+id/item_cardview"
    android:layout_marginLeft="11.7dp"
    android:layout_marginTop="1.7dp"
    android:layout_marginBottom="15dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <e.wolfsoft1.pizza_order_animation.MyImageView
            android:id="@+id/bestseller_food_image"
            android:layout_width="119dp"
            android:layout_height="119dp"
            android:scaleType="fitXY"
            android:transitionName="@string/blue_name"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bestseller_pizza_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="Hawaiian Pizza"
                android:textColor="#272a33"
                android:textSize="18.3sp" />

            <TextView
                android:id="@+id/bestseller_pizza_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:text="Smoked Bacon, Roasted Red
Peppers, Mozzarella Cheese"
                android:textColor="#a6a8bc"
                android:textSize="11.7sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9.7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bestseller_pizza_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:text="$20"
                    android:textColor="#272a33"
                    android:textSize="18.3sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4.7dp"
                    android:background="@drawable/gray_circle"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:paddingLeft="4dp"
                    android:paddingTop="2.3dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="2.5dp"
                    android:text="M"
                    android:textColor="#a6a8bc"
                    android:textSize="9.7dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/customize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:text="Customise"
                    android:textColor="#39b429"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14.7dp"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:text="Add to Cart"
                    android:textColor="#ff5400"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>